<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/light_sage"
    tools:context=".controller.MainActivity">

    <ImageButton
        android:id="@+id/View1"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:background="@color/light_sage"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        android:foregroundGravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_android_happy" />

    <ImageButton
        android:id="@+id/View2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/View1"
        android:background="@color/banana_yellow"
        android:clickable="true"
        android:contentDescription="TODO"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_android_superhappy" />

    <ImageButton
        android:id="@+id/View3"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/View2"
        android:background="@color/cornflower_blue_65"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_android_normal" />

    <ImageButton
        android:id="@+id/View4"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/View3"
        android:background="@color/warm_grey"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_android_disappointed" />

    <ImageButton
        android:id="@+id/View5"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/View4"
        android:background="@color/faded_red"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_android_sad" />

</RelativeLayout>